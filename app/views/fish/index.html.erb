<% if flash[:error] %>
	<div class="alert alert-danger" role="alert">
	  <%= flash[:error] %>
	</div>
<% end %>

<!-- Navigation Corners -->
<div class="corner-left" id = "decoration-corner">
	<span>
		<%= link_to "Go to Your Tanks!", tanks_path, class: "tanks-link"%>
	</span>
</div>
<div class="corner-right" id = "decoration-corner-2">
	<span class="span">
		<%= link_to "Go to Decoration Store!", decorations_path, class: "fish-link", id: "decorations-link"%>
	</span>
</div>

<body class="fish_market">
<h1 class="market-title">Market</h1>
<div class="card-columns">
<% @fish.each do |fish|%>
	<div class="card">
	  <div class="card-body">
			<div class="fish_name">
				<%= fish.name %><br>
			</div>
	  	<div class="fishpic">
	  		<%= image_tag "#{fish.id}.png", alt: "#{fish.name}"%><br><br>
	  		<%= form_tag tanks_purchase_path do %>
	  			<label class="price">Price: $<%= fish.cost %></label><br>
			  	<label class = "price">Tank:</label>
			  	<%= collection_select :tank, :id, current_user.tanks, :id, :name_and_money, class: "price" %>
			  	<%= hidden_field_tag 'fish_id', fish.id %>
			  	<%= submit_tag "Buy" , class: "price"%>
	  		<% end %>
	  	</div>

	  </div>
	</div>
<% end %>
</div>
</body>
