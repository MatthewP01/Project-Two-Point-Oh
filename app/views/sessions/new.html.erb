<% if flash[:error] %>
<div class="alert alert-primary" role="alert">
  <%= flash[:error]%>
</div>
<% end %>
<h1 class="app-title">TankyTank</h1>
<!-- <p class="xavier">Xavier Ruiz</p> -->
<!-- <p class="matt">Matt Peoples</p> -->
<div class="container">
	<div class="d-flex justify-content-center h-100">
    <div class="card">
			<div class="card-header">
        <h2 class="log-in">Log In</h2>
      </div>
      <div class="d-flex justify-content-center">
      </div>
      <div class="card-body">
      <%= form_tag "/sessions" do %>
      <div class="input-group form-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-envelope"></i></span>
          <%= email_field_tag :email, nil, placeholder: 'E-mail' %>
          </div>
        </div>
        <div class="input-group form-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-key"></i></span>
            <%= password_field_tag :password, nil, placeholder: 'Password'%>
          </div>
          <div class="d-flex justify-content-center mt-3 login_container">
          <%= submit_tag "Log in", class: "submit_btn_2"%>
          </div>
          <% end %>
          <div class="register_link">
            <%= link_to "Not signed up? Register Here!", "/users/new" %>
          </div>
