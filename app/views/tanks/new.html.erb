  <link rel="stylesheet" type="text/css" href="styles.css">

  </head>



<div class="tank_body">
  <% if flash.now[:error] %>
  <div class="alert alert-primary">
    <%= flash.now[:error][0]%>
  </div>
  <% end %>


  <h1 class="tank_header">Create a New Tank!</h1>


  <div class="tank_form">
    <%= form_for @tank do |f| %>
    <%= f.text_field :name, placeholder: " 🐠 Fish Tank Name! 🐠" %><br>
    <%= f.hidden_field :user_id, :value => current_user.id %><br>
    <br>
      <%= f.submit class: "tank_submit"%>
    <% end %>
  </div>

</div>
