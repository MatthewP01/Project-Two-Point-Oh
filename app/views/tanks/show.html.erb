<head>
<title>Your Tank</title>
 <!--Made with love by Mutiullah Samim -->

<!--Bootsrap 4 CDN-->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

  <!--Fontawesome CDN-->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

<!--Custom styles-->
<link rel="stylesheet" type="text/css" href="styles.css">

</head>

<body class="tank_show">
  <h1 class = "tank_name"><%= @tank.name %></h1>
  <h2 class = "money_problems">$<%= @tank.money %></h2>

    <!-- Navigation Corners -->
    <div class="corner-left">
      <span>
        <%= link_to "Go to Your Tanks!", tanks_path, class: "tanks-link"%>
      </span>
    </div>
    <div class="corner-right">
      <span class="span">
        <%= link_to "Go to Fish Market!", fish_index_path, class: "fish-link"%>
      </span>
    </div>


    <audio id="audio" src="/images/money_sounds.mp3" autoplay="false" ></audio>
    <a onclick="playSound();"> <%= button_to "PRE$$", "/tanks/#{@tank.id}/press", remote: true, class: "button"%></a>
    <script>
    function playSound() {
          var sound = document.getElementById("audio");
          sound.play();
      }
    </script>

    <% @tank.fish.each do |fish|%>
      <div class="fish<%= fish.id %>">
          <%= image_tag "#{fish.id}.png", alt: "#{fish.name}" %>
      </div>
    <% end %>

    <% @tank.decorations.each do |decoration| %>
      <div class="dec<%= decoration.id %>">
          <%= image_tag "d#{decoration.id}.png" %>
      </div>
    <% end %>
    
</body>
